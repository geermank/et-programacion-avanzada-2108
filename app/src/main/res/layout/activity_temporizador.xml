<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TemporizadorActivity">

    <Button
        android:id="@+id/btn_start_temporizador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temporizador"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_start_temporizador_foreground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temporizador primer plano"
        android:layout_below="@id/btn_start_temporizador"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_start_temporizador_intent_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temporizador intent service"
        android:layout_below="@id/btn_start_temporizador_foreground"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="16dp"
        android:layout_below="@id/btn_start_temporizador_intent_service"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>