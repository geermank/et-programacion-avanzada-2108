<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TemporizadorActivity">

    <Button
        android:id="@+id/btn_start_temporizador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temporizador"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_start_temporizador_foreground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temporizador primer plano"
        android:layout_below="@id/btn_start_temporizador"
        android:layout_centerInParent="true"/>

</RelativeLayout>